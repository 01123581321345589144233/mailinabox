# Fail2Ban configuration file for Mail-in-a-Box

[DEFAULT]

# This should ban dumb brute-force attacks, not oblivious users.
findtime = 30
maxretry = 20

# JAILS

[ssh]
enabled  = true
maxretry = 7
findtime = 120
bantime = 3600

[ssh-ddos]
enabled  = true

[sasl]
enabled  = true

[dovecot]
enabled = true
filter  = dovecotimap
